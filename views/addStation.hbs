<div class="flex flex-col gap-xl">
	<h1>{{title}}</h1>
	<form action="/add-station" method="POST" class="flex flex-col gap-lg">
		<div class="flex flex-col gap-md">
			{{>label for="address" text="Indtast adresse"}}
			{{>input type="text" id="address" name="address"}}
		</div>
		<div class="flex flex-col gap-md">
			{{>label for="postal-code" text="Indtast postnummer"}}
			{{>input type="text" id="postal-code" name="postalCode"}}
		</div>
		<div class="flex flex-col gap-md">
			{{>label for="city" text="Indtast by"}}
			{{>input type="text" id="city" name="city"}}
		</div>
		<div class="flex flex-col gap-md">
			{{>label for="company" text="Stations navn"}}
			<select id="company" name="companyId" required>{{!-- ## --}}
				{{#each companies}}
					<option value="{{id}}">{{name}}</option>
				{{/each}}
			</select>
		</div>
		<div class="grid grid-cols-2 gap-md">
			{{> button variant="outline" href="/stations" text="Annuller"}}
			{{> button variant="primary" type="submit"  text="Tilf√∏j station"}}
		</div>
	</form>
</div>