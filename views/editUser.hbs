<div class="flex flex-col gap-xl">
  <h1>{{title}}</h1>
  <div class="flex flex-col gap-md">
    <form action="/users/{{user.id}}" method="POST" data-form="edit-user" class="flex flex-col gap-lg">
      {{> labeledInput type="text" id="first-name" name="firstName" label="Fornavn" value=user.firstName required=true}}
      {{> labeledInput type="text" id="last-name" name="lastName" label="Efternavn" value=user.lastName required=true}}
      {{> labeledInput type="text" id="email" name="email" label="Email" value=user.email required=true}}
      {{> labeledCheckbox id="is-admin" name="isAdmin" label="Administrator" checked=user.isAdmin}}
      <div class="flex flex-col gap-md">
        {{> label text="Tildel station"}}
        <div class="flex flex-col gap-sm">
          <div data-station-list class="flex flex-col gap-sm">
            {{#each user.stations}}
              {{> stationItem id=id text=(concat companies.name ", " address ", " postalCode)}}
            {{/each}}
          </div>
          {{> combobox placeholder="Vælg station" items=stationItems}}
        </div>
      </div>
      {{> button type="submit" text="Gem"}}
    </form>

    <div class="grid grid-cols-2 gap-md">
      <form action="/users/{{user.id}}/delete" method="POST" onsubmit="return confirm('Er du sikker på at du vil slette denne bruger?')">
        {{> button type="submit" variant="destructive" text="Slet bruger"}}
      </form>
      {{> button variant="outline" href="/users" text="Annuller"}}
    </div>
  </div>
</div>